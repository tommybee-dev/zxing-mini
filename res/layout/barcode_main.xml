<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	android:background="@color/myColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="35dp"
        android:baselineAligned="true"
        android:orientation="horizontal" >
        <TextView 
		    android:id="@+id/ScanTextLabel" 
		    android:text="@string/detect_title"
		    android:layout_height="match_parent" 
		    android:layout_width="wrap_content"
		    android:textColor="@color/barCodeTextColor"
		    android:gravity="start"
		    android:textAlignment="center"
		    android:paddingStart="100dp"
		   	android:paddingEnd="100dp"
		    android:textSize="24sp" />
        
		<TextView 
		    android:id="@+id/ScanText" 
		    android:text="@string/detect_code"
		    android:layout_height="30dp" 
		    android:layout_width="250dp"
		    android:textColor="@color/barCodeTextColor"
		    android:background="@color/barCodeColor"
		    android:gravity="end"
		    android:textAlignment="center"
		    android:textSize="24sp" />
    </LinearLayout>
        
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:baselineAligned="true"
        android:orientation="horizontal" >
		
		<TextView 
		   android:id="@+id/ScanTypeLabel" 
		   android:text="@string/scan_title"
		   android:layout_height="match_parent" 
		   android:layout_width="wrap_content"
		   android:textColor="@color/barCodeTextColor"
		   android:paddingStart="100dp"
		   android:paddingEnd="100dp"
		   android:gravity="start"
		   android:textAlignment="center"
		   android:textSize="24sp" />
		 
		<TextView 
		    android:id="@+id/ScanType" 
		    android:text="@string/scan_type"
		    android:layout_height="35dp" 
		    android:layout_width="250dp"
		    android:textColor="@color/barCodeTextColor"
		    android:background="@color/barCodeColor"
		    android:gravity="end"
		    android:textAlignment="center"
		    android:textSize="24sp" />
    </LinearLayout>     
    
		
	<Button android:id="@+id/Button01"
			android:layout_height="wrap_content" 
			android:onClick="@string/buttonHandler" 
			android:layout_width="wrap_content" 
			android:text="@string/detect_code" 
			android:paddingStart="300dp"
			android:paddingEnd="100dp"
			android:textSize="24sp"/>

</LinearLayout>

